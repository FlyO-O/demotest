@model demo.Models.UserMes
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm(Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" })))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>登陆</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Email, new { @class = "form-control"  })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PassWord, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.PassWord, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="登陆" class="btn btn-default" />
                    <hr />
                    @Html.ActionLink("注册", "Index", "Register")
                </div>
            </div>
        </div>
    }
</body>
</html>
